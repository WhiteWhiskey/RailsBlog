<div class="col-sm-6 col-lg-4">
  <div class="card">
    <img class="card-img-top" src="<%= article.banner_image_url %>">
    <div class="card-block">
      <h4 class="card-title"><%= link_to article.title, article %></h4>
      <p class="published-date"><%= article.published_date %></p>
      <p class="card-text"><%= truncate(article.description, length: 100) %></p>
      <%= link_to 'Read', article, class: 'btn btn-primary'%>
      <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary' %>
      <%= link_to 'Destroy', article, class: 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
</div>